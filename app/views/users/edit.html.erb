<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
      <%= form_with model: @user do |f| %>
      <div class="form-group">
        <label for="user-name">NAME</label>
        <%= f.text_field :name, id:"inputName", placeholder:"名前", class:"form-control" %>
      </div>
      <div class="form-group">
        <label for="user-image">Image</label>
        <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*", class:"form-control-file" %>
      </div>
      <div class="form-group">
      <label for="user-introduction">Introduction</label><br>
      <%= f.text_area :introduction, class:"form-control introduction" %>
      </div>
      <div class="form-group">
      <%= f.submit "Update User", class:"btn btn-secondary" %>
      </div>
      <% end %>
    </div>
  </div>
</div>